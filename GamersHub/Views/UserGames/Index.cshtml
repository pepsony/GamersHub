@model IEnumerable<GamersHub.Models.UserGame>
@{
    ViewData["Title"] = "My Game Library";
}

<h1 class="mb-4">My Game Library</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Game to Library</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You haven’t added any games to your library yet.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Game</th>
                <th>Status</th>
                <th style="width: 160px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Game?.Title</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
