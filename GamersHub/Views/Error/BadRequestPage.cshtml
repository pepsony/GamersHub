@{
    ViewData["Title"] = "Server Error";
}

<div class="container text-center my-5">
    <h1 class="display-1 fw-bold text-warning">500</h1>
    <h2 class="mb-3">Something went wrong</h2>
    <p class="lead text-muted mb-4">
        We’re experiencing an internal server issue. Please try again later.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
        <i class="bi bi-arrow-left-circle"></i> Go Back Home
    </a>
</div>