@model IEnumerable<GamersHub.Models.Game>

@{
    ViewData["Title"] = "Games";
}

<h1>Games</h1>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]"
               class="form-control" placeholder="Search games by title..." />
        <button type="submit" class="btn btn-outline-secondary">Search</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
</p>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var game in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(game.ImagePath))
                {
                    <img src="@game.ImagePath" class="card-img-top" alt="@game.Title" style="height: 400px; object-fit: cover; border-radius: 8px;" />
                }
                else
                {
                    <div class="bg-secondary text-white text-center p-5">
                        No Image
                    </div>
                }

                <div class="card-body">
                    <h5 class="card-title">@game.Title</h5>
                    <p class="card-text">
                        <strong>Release:</strong> @game.ReleaseDate?.ToString("yyyy-MM-dd")<br />
                        <strong>Genre:</strong> @game.Genre?.Name
                    </p>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Details" asp-route-id="@game.Id" class="btn btn-sm btn-info me-1">Details</a>
                    <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
